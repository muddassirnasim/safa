{
	"title": "Nolan",
	"version": 3,
	"$schema": "https://schemas.wp.org/wp/6.6/theme.json",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#00338C",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#000000",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#003B89",
					"name": "Background",
					"slug": "background"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--alegreya)"
		},
		"blocks": {
			"core/post-title": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"core/site-title": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--alegreya)"
				},
				"elements": {
					"link": {
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--secondary)"
							}
						}
					}
				}
			},
			"core/post-content": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--alegreya)"
				}
			}
		}
	}
}
